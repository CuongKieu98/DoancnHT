@model IEnumerable<DoancnHT.Models.Danhmucdoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<title>Danh mục sản phẩm</title>
<div class="row">
    <div class="col-lg-12 col-md-6 col-sm-7">
        <h2>Cửa hàng</h2>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
            <li class="breadcrumb-item active">Cửa hàng</li>
        </ul>
    </div>
</div>
@if (TempData["AlertMessage"] != null)
{
    <div id="AlertBox" class="alert @TempData["AlertType"] hidden">

        <strong>@TempData["AlertMessage"]</strong>
    </div>

}
<!--2-->
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2> Vị trí giao hàng <small>Lọc sản phẩm...tìm kiếm</small> </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="@Url.Action("Create","Danhmucdoans")" class="btn  btn-raised g-bg-gy waves-effect">Thêm mới</a>

                    </li>
                </ul>

            </div>

            <div class="body table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên Danh mục</th>
                            <th>Hình ảnh </th>
                            <th>Thuộc cửa hàng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>


                                <td style="text-align: center">@item.MaDM</td>
                                <td>
                                    <a href="@Url.Action("Details", "Danhmucdoans", new { id = item.MaDM })">
                                        @Html.DisplayFor(modelItem => item.TenDM)

                                    </a>

                                </td>
                                <td> @Html.DisplayFor(modelItem => item.Hinhanhdm)</td>
                             
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaCH)
                                </td>

                                <td><a href="@Url.Action("Delete","Danhmucdoans", new { id = item.MaCH })" title="Xóa"><i class="material-icons">delete_forever</i></a> </td>

                            </tr>

                        }
                    </tbody>
                </table>
                <ul class="pagination" style="padding-left:700px">
                    <li class="page-item"><a class="page-link" href="#">Quay lại</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Tiếp theo</a></li>
                </ul>

               
            </div>
        </div>
    </div>
</div>


