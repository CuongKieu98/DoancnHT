@model IEnumerable<DoancnHT.Models.Danhmucdoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/assets/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<title>Danh mục sản phẩm</title>
<div class="row">
    <div class="col-lg-12 col-md-6 col-sm-7">
        <h2>Cửa hàng</h2>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh mục</li>
        </ul>
    </div>
</div>
@if (TempData["AlertMessage"] != null)
{
    <div id="AlertBox" class="alert @TempData["AlertType"] hidden">

        <strong>@TempData["AlertMessage"]</strong>
    </div>

}
<!--2-->
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2> Vị trí giao hàng <small>Lọc sản phẩm...tìm kiếm</small> </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="@Url.Action("Create","Danhmucdoans")" class="btn  btn-raised g-bg-gy waves-effect">Thêm mới</a>

                    </li>
                </ul>

            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">

                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Loại sản phẩm</th>
                                <th>Mô tả</th>
                                @*<th>Mã đơn hàng</th>*@
                                @*<th>Mã khuyến mãi</th>*@
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>No.</th>
                                <th>Loại sản phẩm</th>
                                <th>Mô tả</th>
                                @*<th>Mã đơn hàng</th>*@
                                @*<th>Mã khuyến mãi</th>*@
                                <th>Thao tác</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @Html.ActionLink(item.TenDM, "Details", new { id = item.MaDM })
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Hinhanhdm)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Delete","Cuahangs", new { id = item.MaDM })" title="Xóa"><i class="material-icons">delete_forever</i></a>
                                    </td>

                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


<!--ss-->
<script src="~/assets/js/buttons/vendorscripts.bundle.js"></script>
<script src="~/assets/js/buttons/datatablescripts.bundle.js"></script>
<script src="~/assets/js/buttons/jquery-datatable.js"></script>

<script type="text/javascript" charset="utf8">
    $(document).ready(function () {
        setTimeout(function () {
            var listButton = $('#DataTables_Table_0_length').find('button');
            listButton.each(function () {
                $(this).remove();
            });
        }, 500);
    });
</script>